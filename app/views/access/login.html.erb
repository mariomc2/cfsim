<% @page_title = "Login" %>

<div class="row">
  <%= render partial: "shared/disclaimer" %>
</div>
<br>
<div class="card card-outline-primary">
  <div class="card-block text-primary">
    <%= form_tag(access_attempt_login_path, :method => :post) do %>
    <table class="table">
      <tr>
        <td><%= label_tag(t("projections.username")) %></td>
        <td><%= text_field_tag(:username, params[:username]) %></td>
      </tr>
      <tr>
        <td><%= label_tag(t("projections.password")) %></td>
        <td><%= password_field_tag(:password) %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td><%= submit_tag(t("projections.login")) %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>
