<% @page_title = "Login" %>

  <%= render partial: "shared/disclaimer" %>

<br>
<div class="card card-outline-primary">
  <div class="card-block text-primary">
    <%= form_tag(access_attempt_login_path, :method => :post) do %>
      <div class="form-login">
        <h4><%= t("projections.welcome_back") %></h4>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><%=icon('user')%></span>
          <%= text_field_tag(:username, params[:username],:class => "form-control input-sm chat-input",placeholder:t("projections.username")) %>
        </div>
        </br>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><%=icon('lock')%></span>
          <%= password_field_tag(:password, value = nil, :class => "form-control input-sm chat-input",placeholder:t("projections.password")) %>
        </div>
        </br>
        <div class="wrapper">
          <span class="group-btn"> 
            <%= button_tag(icon('sign-in', t("projections.login")), :class => "btn btn-primary btn-md") %>   
          </span>
        </div>
      </div>
    <% end %>

          
  </div>
</div>